root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[*.{ts}]
indent_style = space
indent_size = 4

[*.{json,yml,html}]
indent_style = space
indent_size = 2
